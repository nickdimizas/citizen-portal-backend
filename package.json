{
  "name": "citizen-portal-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest watch --ui",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "prepare": "husky || exit 0",
    "pre-commit": "npx lint-staged && npm run test",
    "commit": "cz",
    "release": "commit-and-tag-version",
    "docker:network": "docker network create citizen-net || true",
    "docker:volume": "docker volume create mongodb_data || true",
    "db:create": "docker run -d --name citizen-mongo -p 27017:27017  -e MONGO_INITDB_ROOT_USERNAME=admin -e MONGO_INITDB_ROOT_PASSWORD=password -e MONGO_INITDB_DATABASE=citizen_portal_db -v mongodb_data:/data/db -v ./mongo-init:/docker-entrypoint-initdb.d --network citizen-net mongo:7.0",
    "db:run": "docker run -d --name citizen-mongo  -p 27017:27017  -v mongodb_data:/data/db  --network citizen-net  mongo:7.0",
    "build:docker": "npm i && npm run build && docker build -t citizen-portal-backend:prod .",
    "run:docker": "docker run -d -p 5000:5000 --name citizen-backend --network citizen-net citizen-portal-backend:prod",
    "setup:docker": "npm run docker:network && npm run docker:volume && npm run db:create && npm run build:docker && npm run run:docker",
    "admin:seed:ts": "npx ts-node src/scripts/seedAdmin.ts",
    "admin:seed:js": "node dist/scripts/seedAdmin.js",
    "admin:seed:docker": "docker exec -it citizen-backend node dist/scripts/seedAdmin.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickdimizas/citizen-portal-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/nickdimizas/citizen-portal-backend/issues"
  },
  "homepage": "https://github.com/nickdimizas/citizen-portal-backend#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.0.13",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "commit-and-tag-version": "^12.5.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "msw": "^2.10.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,json}": [
      "npm run lint:fix",
      "npm run format"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
